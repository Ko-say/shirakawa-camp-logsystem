<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <form action="/SelectTerm" method="POST">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="inputDateFrom">Date</label>
                    <input type="date" class="form-control" id="inputDateFrom" name="inputDateFrom" required>
                  </div>
                  <div class="col-md-6">
                    <label for="inputTimeFrom">Time</label>
                    <input type="time" class="form-control" id="inputTimeFrom" name="inputTimeFrom" value="00:00" required>
                  </div>
            </div>
            <h2 class="text-center">~</h2>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="inputDateTo">Date</label>
                    <input type="date" class="form-control" id="inputDateTo" name="inputDateTo" required>
                  </div>
                  <div class="col-md-6">
                    <label for="inputTimeTo">Time</label>
                    <input type="time" class="form-control" id="inputTimeTo" name="inputTimeTo" value="23:59" required>
                    
                  </div>
            </div>
            <div class="col-12 mt-3">
              <button type="submit" class="btn btn-primary">OK</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>